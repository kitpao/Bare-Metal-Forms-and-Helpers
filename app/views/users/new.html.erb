<%= form_for @user do |f| %>
  <fieldset>
  <legend>Register Now!</legend>
  <div class='row'>
    <div class='col s1'></div>
    <div class='input-field col s6'>
      <%= f.text_field :username, class: 'validate' %>
      <%= f.label :username, 'User name' %>
    </div>
  </div>
  <div class="row">
    <div class="col s1"></div>
    <div class="input-field col s6">
      <%= f.password_field :password, class: 'validate' %>
      <%= f.label :password, 'Password' %>
    </div>
  </div>
  <div class="row">
    <div class="col s1"></div>
    <div class="input-field col s6">
      <%= f.email_field :email, placeholder: 'example@gmail.com', class: 'validate' %>
      <%= f.label :email, 'E-mail' %>
    </div>
  </div>
  <div class="row">
    <div class="col s1"></div>
    <div class="input-field col s6">
      <%= f.button 'Create', class: ['waves-effect', 'waves-light', 'btn'] %>
    </div>
  </div>
  </fieldset>

<% end %>

